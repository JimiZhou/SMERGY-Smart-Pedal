<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/slide_image2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:background="@drawable/frame"
        app:srcCompat="@drawable/ic_alarm_clock" />

    <TextView
        android:id="@+id/slide_heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_image2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="HEADING"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slide_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/slide_heading2"
        android:layout_marginTop="15dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#a8a9b2"
        android:textSize="16sp" />

</RelativeLayout>